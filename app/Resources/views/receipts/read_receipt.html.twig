{% extends '::base.html.twig' %}
{% set quantityplaceholder = 'receipt.quantity'|trans({}, 'FOSUserBundle') %}
{% block body %}
        </div>
        	<div class="row">
			<div class="col-md-6">
				<div class="panel panel-primary">
					<div class="panel-heading">
						<h3 class="panel-title">{{ receipt.name }}</h3>
						<div class="pull-right">
						</div>
					</div>
					<div class="panel-body">
						<input type="text" class="form-control" id="dev-table-filter" data-action="filter" data-filters="#dev-table" placeholder="Filter Developers" />
					</div>
					<table class="table table-hover" id="dev-table">
						<tbody>
							<tr>
								<td>{{ 'receipt.dishes' |trans({}, 'FOSUserBundle') }} : </td>
								<td>{{ receipt.typeDishes.name }}</td>
							</tr>
							<tr> 
								<td>{{ 'receipt.is_veig' |trans({}, 'FOSUserBundle') }}</td>
                                {% if receipt.isVeg=="1" %}
                                <td>{{ 'receipt.oui' |trans({}, 'FOSUserBundle') }}</td>
                                {% else %}
								<td>{{ 'receipt.non' |trans({}, 'FOSUserBundle') }}</td>
                                 {% endif %}
							</tr>
							<tr>
                                <td>{{ 'receipt.level' |trans({}, 'FOSUserBundle') }}</td>
								<td>{{ receipt.levelId }}</td>
							</tr>
                            	 <tr>
                                 <td>{{ 'receipt.time' |trans({}, 'FOSUserBundle') }}</td>
								<td>{{ receipt.prepareTime}} {{ 'receipt.minutes' |trans({}, 'FOSUserBundle') }}</td> 
							</tr> 
							 <tr>
                                 <td>{{ 'receipt.time_cooking' |trans({}, 'FOSUserBundle') }}</td>
								<td>{{ receipt.cookingTime }} {{ 'receipt.minutes' |trans({}, 'FOSUserBundle') }}</td> 
							</tr> 
							 <tr>
                                 <td>{{ 'receipt.type' |trans({}, 'FOSUserBundle') }}</td>
								<td>{{ receipt.typeCooking.name }}</td> 
							</tr> 
							 <tr>
                                 <td>{{ 'receipt.price' |trans({}, 'FOSUserBundle') }}</td>
								<td>{{ receipt.priceTypeId }}</td> 
							</tr> 
							 <tr>
                                 <td>{{ 'receipt.qte' |trans({}, 'FOSUserBundle') }}</td>
								<td>{{ receipt.qte }} {{ 'receipt.personne' |trans({}, 'FOSUserBundle') }}</td> 
							</tr> 
						</tbody>
					</table>
				</div>
			</div>
    </div>
{% endblock body %}